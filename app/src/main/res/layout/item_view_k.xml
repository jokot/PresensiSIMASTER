<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:background="@color/white">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/rectangle_bordered_rounded">
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/tv_matkul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="MII3007 - Filsafat Ilmu Komputer"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_green"
                    android:backgroundTint="@color/pink"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp">

                <View
                        android:id="@+id/v_persen"
                        android:layout_width="200dp"
                      android:layout_height="4dp"
                      android:background="@drawable/rectangle_green"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="Hadir 7 dari 7 pertemuan "/>
                <TextView
                        android:id="@+id/tv_persen"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="(83%)"/>
            </LinearLayout>
        </LinearLayout>

        <View android:layout_width="1dp"
              android:layout_height="match_parent"
              android:background="@color/grey"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:src="@drawable/ic_right_arrow"/>
    </LinearLayout>

</LinearLayout>